#!/usr/bin/env bash

TARGET_USER="ansible"
# Window in which the user must not be detected
USER_DETECTION_WINDOW_IN_SECONDS=10
# How frequently to check for the user
USER_DETECTION_INTERVAL_IN_SECONDS=1
DETECTED_USER_SLEEP_IN_SECONDS=300
MAX_SLEEP_TIME_IN_SECONDS=$((2 * 60 * 60)) # 2 hours

log() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $@"
}


# Checks if the target user is connected within a given duration.
# Returns:
#   0 if the user IS FOUND during the check period.
#   1 if the user IS NOT FOUND
detect_user() {
    local target_user="$1"
    local check_duration="$2"
    local check_interval="$3"
    local i

    log "Performing initial check for '$target_user' for $check_duration seconds (interval: $check_interval second)..."
    for (( i=0; i < check_duration; i+=check_interval )); do
        # -w: match whole word
        if who | grep -qw "$target_user"; then
            log "User '$target_user' detected"
            return 0
        fi

        sleep "$check_interval"
    done

    log "User '$target_user' not detected"
    return 1
}

wait_for_user_logout() {
    local target_user="$1"

    log "Starting wait loop for user '$target_user' absence (max ${MAX_SLEEP_TIME_IN_SECONDS}s)."
    local start_time
    local current_time
    local elapsed_time
    start_time=$(date +%s)

    while true; do # Loop controlled by time check below
        current_time=$(date +%s)
        elapsed_time=$((current_time - start_time))

        if (( elapsed_time >= MAX_SLEEP_TIME_IN_SECONDS )); then
            log "Maximum wait time (${MAX_SLEEP_TIME_IN_SECONDS}s) reached. Proceeding anyway..."
            return 0
        fi

        if detect_user "$target_user" "$USER_DETECTION_WINDOW_IN_SECONDS" "$USER_DETECTION_INTERVAL_IN_SECONDS"; then
          log "User '$target_user' was detected by detect_user. Sleeping for $DETECTED_USER_SLEEP_IN_SECONDS seconds."
          log "Current elapsed time: ${elapsed_time}s / ${MAX_SLEEP_TIME_IN_SECONDS}s."
          sleep "$DETECTED_USER_SLEEP_IN_SECONDS"
        else
          log "User '$target_user' confirmed absent by detect_user. Proceeding..."
          return 0 # Success, proceed with execution
        fi
    done

    # This part should technically not be reached
    exit 1
}

check_for_running_playbook() {
    log "Checking for existing ansible-playbook processes..."
    # pgrep -f checks the full command line for the pattern.
    if pgrep -f "ansible-playbook" >/dev/null; then
        log "Error: Another ansible-playbook process is already running. Exiting."
        log "Running processes found:"
        # pgrep -a shows the full command line.
        pgrep -af "ansible-playbook" | while read -r line; do log "  $line"; done
        exit 1
    fi
    log "No other ansible-playbook process found. Continuing."
}


SKIP_USER_LOGOUT_CHECK=false
if [[ "$1" == "--skip-user-logout-check" ]]; then
    log "Flag --skip-user-logout-check detected. Skipping user logout wait."
    SKIP_USER_LOGOUT_CHECK=true
fi

if [ "$SKIP_USER_LOGOUT_CHECK" = false ]; then
    wait_for_user_logout "$TARGET_USER"
fi

check_for_running_playbook

ROOT_DIR="/app/auto-ansible"

source "${ROOT_DIR}/python-env/bin/activate"

log "Pulling latest changes from git"
git -C "${ROOT_DIR}/repo" pull
BWS_TOKEN=$(cat "${ROOT_DIR}/config/bws_access_token")

log "Running ansible playbook"
BWS_ACCESS_TOKEN="${BWS_TOKEN}" ansible-playbook --connection=local --inventory "{{ internal_ip_address }}" --limit "{{ internal_ip_address }}" "${ROOT_DIR}/repo/ansible/setup_homelab.yaml" -i "${ROOT_DIR}/repo/ansible/inventory/home.yaml" -v
EXIT_CODE=$?

# Prometheus metrics export
METRICS_DIR="/var/lib/node_exporter/textfile_collector"
METRICS_FILE="${METRICS_DIR}/auto_ansible.prom"

log "Exporting metrics to ${METRICS_FILE}"
mkdir -p "${METRICS_DIR}"

# Initialize counters if they don't exist
RUNS=0
FAILURES=0
if [ -f "$METRICS_FILE" ]; then
    RUNS=$(grep "^auto_ansible_runs_total " "$METRICS_FILE" | cut -d' ' -f2 || echo 0)
    FAILURES=$(grep "^auto_ansible_failures_total " "$METRICS_FILE" | cut -d' ' -f2 || echo 0)
fi

RUNS=$((RUNS + 1))
STATUS=1
if [ $EXIT_CODE -ne 0 ]; then
    FAILURES=$((FAILURES + 1))
    STATUS=0
    log "Ansible playbook failed with exit code ${EXIT_CODE}"
else
    log "Ansible playbook completed successfully"
fi

# Use a temporary file to avoid partial reads by node_exporter
TEMP_METRICS_FILE="${METRICS_FILE}.tmp"
cat <<EOF > "${TEMP_METRICS_FILE}"
# HELP auto_ansible_last_run_timestamp_seconds Timestamp of the last auto-ansible run.
# TYPE auto_ansible_last_run_timestamp_seconds gauge
auto_ansible_last_run_timestamp_seconds $(date +%s)
# HELP auto_ansible_last_run_status Status of the last auto-ansible run (1=success, 0=failure).
# TYPE auto_ansible_last_run_status gauge
auto_ansible_last_run_status $STATUS
# HELP auto_ansible_runs_total Total number of auto-ansible runs.
# TYPE auto_ansible_runs_total counter
auto_ansible_runs_total $RUNS
# HELP auto_ansible_failures_total Total number of auto-ansible failures.
# TYPE auto_ansible_failures_total counter
auto_ansible_failures_total $FAILURES
EOF

mv "${TEMP_METRICS_FILE}" "${METRICS_FILE}"

exit $EXIT_CODE